{
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    { "source": "/(.*)\\.(js|css)", "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ] },
    { "source": "/(.*)\\.(png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf)", "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ] },
    { "source": "/index.html", "headers": [ { "key": "Cache-Control", "value": "no-cache" } ] }
  ]
}